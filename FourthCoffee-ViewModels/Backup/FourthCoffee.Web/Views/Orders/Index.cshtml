@model IEnumerable<FourthCoffee.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Date
        </th>
        <th>
            Total
        </th>
        <th>
            ReadyDateTime
        </th>
        <th>
            OrderType
        </th>
        <th>
            LineItems
        </th>
        <th>
            PaymentType
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@String.Format("{0:g}", item.Date)
        </td>
        <td>
			@String.Format("{0:F}", item.Total)
        </td>
        <td>
			@String.Format("{0:g}", item.ReadyDateTime)
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.OrderType).ToString()
        </td>
        <td>
			@(item.LineItems == null ? "None" : item.LineItems.Count.ToString())
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.PaymentType).ToString()
        </td>
    </tr>
}

</table>


