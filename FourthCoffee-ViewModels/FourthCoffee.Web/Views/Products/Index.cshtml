@model IEnumerable<FourthCoffee.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Category
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            CreationDate
        </th>
        <th>
            ExpirationDate
        </th>
        <th>
            QtyOnHand
        </th>
        <th>
            ImageName
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@(item.Category == null ? "None" : item.Category.Name)
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@String.Format("{0:F}", item.Price)
        </td>
        <td>
			@String.Format("{0:g}", item.CreationDate)
        </td>
        <td>
			@String.Format("{0:g}", item.ExpirationDate)
        </td>
        <td>
			@item.QtyOnHand
        </td>
        <td>
			@item.ImageName
        </td>
    </tr>
}

</table>


